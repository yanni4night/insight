  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yanni4night/insight/issues"
  },
  "homepage": "https://github.com/yanni4night/insight#readme",
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^1.1.4",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "rollup": "^0.67.1"
